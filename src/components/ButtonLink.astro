
---
interface Props {
  href: string;
  text: string;
  variant?: 'primary' | 'secondary';
  isDownload?: boolean; 
}

const {href, text, variant="primary", isDownload} = Astro.props;
---

{isDownload &&
    <a download href={href} class={`button-link ${variant}`}>{text}</a>
}

{!isDownload &&
    <a href={href} class={`button-link ${variant}`}>{text}</a>
}


<style>
    .button-link {
        display: flex;
        padding: 10px;
        width: 180px;
        justify-content: center;
        text-decoration: none;
    }

    .primary {
        background-color: var(--primary);
        color: var(--secondary);
        
    }

    .secondary{
        background-color: var(--secondary);
        color: var(--primary);
        border: 1px solid var(--primary);
    }
</style>

